<prismIoc:PrismApplication
    x:Class="Barembo.UnoApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:prismIoc="using:Prism.DryIoc"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Barembo.UnoApp"
    xmlns:myResources="using:Barembo.UnoApp.Shared.Resources">
    <prismIoc:PrismApplication.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Converters.xaml"/>
                <ResourceDictionary Source="/Resources/Fonts.xaml"/>
                <ResourceDictionary Source="/Resources/Colors.xaml"/>
                <myResources:DataTemplates/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </prismIoc:PrismApplication.Resources>

</prismIoc:PrismApplication>
